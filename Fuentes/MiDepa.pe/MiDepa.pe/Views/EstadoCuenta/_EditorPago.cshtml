@using MiDepa.pe.Utility
@using MiDepa.pe.Helper
@model MiDepa.pe.Models.EstadoCuenta.PagoEditorViewModel

<form id="pagoEditorForm" enctype="multipart/form-data" method="POST" action="/" class="form-horizontal" autocomplete="off">
    @Html.HiddenFor(model => model.Pago.PagoId)
    @Html.HiddenFor(model => model.Pago.EstadoCuentaId)
    @Html.HiddenFor(model => model.Pago.EstadoId)

    <div class="form-group">
        <label class="col-md-12">N° Voucher</label>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Pago.NroVoucher, new { @class = "form-control form-control-line", @required = "required", @maxlength = "20" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Monto</label>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Pago.Monto, new { @class = "form-control form-control-line input-align-right ", @min = "1", @required = "required", @maxlength = "10" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Cuenta Bancaria</label>
        <div class="col-md-12">
            @Html.DropDownListFor(model => model.Pago.CuentaBancariaId, Model.LstCuentasBancarias, "--Seleccione--", new { @class = "form-control form-control-line" })
        </div>
    </div>


    @if (Model.Pago != null)
    {
        if (!string.IsNullOrEmpty(Model.Pago.Observacion))
        {
            <div class="form-group">
                <label class="col-md-12">Observación</label>
                <div class="col-md-12">
                    @Html.TextBoxFor(model => model.Pago.Observacion, new { @class = "form-control form-control-line ", @maxlength = "50" })
                </div>
            </div>
        }
        <div class="row el-element-overlay m-b-40">

            @if (Model.RutaImagen1 != "")
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="white-box">
                        <div class="el-card-item">
                            <div class="el-card-avatar el-overlay-1">
                                <img src="@Model.RutaImagen1" />
                                <div class="el-overlay button_zoom">
                                    <ul class="list-style-none el-info">
                                        <li class="el-item"><a onclick="helperFunctions.mostrarBase64('@Model.RutaImagen1')" class="btn default btn-outline image-popup-vertical-fit el-link" href="#"><i class="icon-magnifier"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.RutaImagen2 != "")
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="white-box">
                        <div class="el-card-item">
                            <div class="el-card-avatar el-overlay-1">
                                <img src="@Model.RutaImagen2" />
                                <div class="el-overlay">
                                    <ul class="list-style-none el-info">
                                        <li class="el-item"><a onclick="helperFunctions.mostrarBase64('@Model.RutaImagen2')" class="btn default btn-outline image-popup-vertical-fit el-link" href="#"><i class="icon-magnifier"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Model.RutaImagen3 != "")
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <div class="white-box">
                        <div class="el-card-item">
                            <div class="el-card-avatar el-overlay-1">
                                <img src="@Model.RutaImagen3" />
                                <div class="el-overlay">
                                    <ul class="list-style-none el-info">
                                        <li class="el-item"><a onclick="helperFunctions.mostrarBase64('@Model.RutaImagen3')" class="btn default btn-outline image-popup-vertical-fit el-link" href="#"><i class="icon-magnifier"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    }
    else
    {
        <div class="form-group">
            <label class="col-md-12">Adjunto 1</label>
            <div class="col-md-12">
                <input type="file" class="form-control" id="Adjunto1" name="Adjunto1" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Adjunto 2</label>
            <div class="col-md-12">
                <input type="file" class="form-control" id="Adjunto2" name="Adjunto2" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Adjunto 3</label>
            <div class="col-md-12">
                <input type="file" class="form-control" id="Adjunto3" name="Adjunto3" />
            </div>
        </div>
    }

    <br />
</form>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        estadocuenta.editor.load();
    });
</script>