@{
    ViewBag.Title = "Perú Depa";
}

@model MiDepa.pe.Models.EstadoCuenta.EstadoCuentaGridViewModel

<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <h4 class="page-title">Estado de Cuenta</h4>
    </div>
    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
        <button class="right-side-toggle waves-effect waves-light btn-info btn-circle pull-right m-l-20"><i class="ti-settings text-white"></i></button>
        <ol class="breadcrumb">
            <li class="active">Estado de Cuenta</li>
        </ol>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">

    <input type="hidden" id="hdn_edc"/>

    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="white-box">
            <div class="row row-in">
                <div class="col-lg-3 col-sm-6 row-in-br">
                    @Html.DropDownListFor(model => model.CodigoCampania, Model.LstCampanias, "--Seleccione--", new { @class = "form-control", @required = "required" })
                </div>
                <div class="col-lg-3 col-sm-6 row-in-br  b-r-none">
                    <h3 id="deu_mes" class="box-title text-center"><small>Total Deuda Mes: </small> S/0.00</h3>
                </div>
                <div class="col-lg-3 col-sm-6 row-in-br">
                    <h3 id="fec_emi" class="box-title text-center"><small>Fecha Emisión: </small> </h3>
                </div>
                <div class="col-lg-3 col-sm-6  b-0">
                    <h3 id="fec_ven" class="box-title text-center"><small>Fecha Vencimiento: </small> </h3>
                </div>
            </div>


            <div class="row sales-report">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="text-center">
                        <div id="morris-donut-chart" style="height:156px"></div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <h3 id="tit_det" class="box-title text-center"></h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div id="preview" class="text-center">
                        <canvas id="canvas-preview"></canvas>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <h3 id="dias_ret" class="box-title text-center"></h3>
                        </div>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="col-md-6 col-sm-6 col-xs-2 pull-right">
                        <h3 id="tot_est_cue" class="box-title text-right">S/ 0.00</h3>
                    </div>
                    <h3 class="box-title">Detalle de Estado de Cuenta</h3>
                    <div class="table-responsive">
                        <table id="tbl_detesc" class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>CONCEPTO</th>
                                    <th>MONTO</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="col-md-6 col-sm-6 col-xs-2 pull-right">
                        <h3 id="tot_pag" class="box-title text-right">S/ 0.00</h3>
                    </div>
                    <h3 class="box-title">Detalle de Pagos</h3>
                    <div class="table-responsive">
                        <table id="tbl_pago" class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>FECHA</th>
                                    <th>ESTADO</th>
                                    <th>MONTO</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>



    </div>

</div>

<script>
    $(document).ready(function () {
        estadocuenta.grid.load();
    });
</script>