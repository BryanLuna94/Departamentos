@using MiDepa.pe.Helper
@model MiDepa.pe.Models.Campania.CampaniaEditorViewModel

    <form id="campaniaEditorForm" enctype="multipart/form-data" method="POST" action="/" class="form-horizontal" autocomplete="off">
        @Html.HiddenFor(model => model.Campania.CampaniaId)

        <div class="form-group">
            <label class="col-md-12">Año</label>
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.Campania.Anio, new { @class = "form-control form-control-line", @placeholder = "Año...", @required = "required", @maxlength = "4" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Mes</label>
            <div class="col-md-12">
                @Html.DropDownListFor(model => model.Campania.MesId, Model.LstMeses, "--Seleccione--", new { @class = "form-control form-control-line" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label class="col-md-12">Fecha Inicio</label>
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-clock-o"></i>
                    </div>
                    @Html.TextBoxFor(model => model.Campania.FechaInicio, new { @class = "form-control pull-right  form-control-line" })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label class="col-md-12">Fecha Fin</label>
                <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-clock-o"></i>
                    </div>
                    @Html.TextBoxFor(model => model.Campania.FechaFin, new { @class = "form-control pull-right  form-control-line" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Código</label>
            <div class="col-md-12">
                <input type="text" id="txtCodigo" name="txtCodigo" class="form-control" readonly="readonly" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-12">Lista de Conceptos</label>
            <div class="col-md-12">
                <div class="white-box">
                    <div class="inbox-center table-responsive">
                        <table class="table table-hover">
                            <tbody>
                                @if (Model.ListaConceptos.Count > 0)
                                {
                                    var cont = 0;
                                    foreach (var item in Model.ListaConceptos)
                                    {

                                        var tieneCheck = (item.Existe) ? "checked='cheked'" : "";
                                        var idTxt = "ListaConceptos_" + cont.ToString() + "_Monto";


                                        <tr class="unread">
                                            <td align="center" style="width: 50px;">
                                                @Html.HiddenFor(m => m.ListaConceptos[cont].ConceptoId)
                                                @Html.CheckBoxFor(m => m.ListaConceptos[cont].Existe, new { @class = "exis-conc" })
                                            </td>
                                            <td class="max-texts">@item.NombreConcepto</td>
                                            <td align="center">@Html.TextBoxFor(m => m.ListaConceptos[cont].Monto, new { @class = "form-control-line input-align-right mont-conc" })</td>
                                            @*<td align="center"><input style="text-align: right;" name="ListaConceptos[@cont].Monto" id="@idTxt" value="@HelperFormat.Numero(item.Monto)" class="form-control-line input-align-right" /></td>*@
                                        </tr>
                                        cont++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>


        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12">
            </div>
        </div>

        <br />
    </form>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        campania.editor.load();
    });
</script>