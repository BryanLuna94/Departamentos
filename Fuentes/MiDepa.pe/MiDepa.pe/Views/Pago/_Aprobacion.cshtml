
@using MiDepa.pe.Utility
@using MiDepa.pe.Helper
@model MiDepa.pe.Models.Pagos.PagoEditorViewModel

<form id="pagoEditorForm" enctype="multipart/form-data" method="POST" action="/" class="form-horizontal" autocomplete="off">
    @Html.HiddenFor(model => model.Pago.PagoId)
    @Html.HiddenFor(model => model.Pago.EstadoCuentaId)
    @*@Html.HiddenFor(model => model.Pago.EstadoId)*@

    <div class="form-group">
        <label class="col-md-12">N° Voucher</label>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Pago.NroVoucher, new { @class = "form-control form-control-line", @required = "required", @maxlength = "20", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Monto</label>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Pago.Monto, new { @class = "form-control form-control-line", @min = "1", @required = "required", @maxlength = "10", @readonly = "readonly" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Cuenta Bancaria</label>
        <div class="col-md-12">
            @Html.DropDownListFor(model => model.Pago.CuentaBancariaId, Model.LstCuentasBancarias, new { @class = "form-control form-control-line", @disabled = "disabled" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-12">Observación</label>
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Pago.Observacion, new { @class = "form-control form-control-line ", @required = "required", @maxlength = "50" })
        </div>
    </div>

    <div class="row el-element-overlay m-b-40">

        @if (Model.RutaImagen1 != "")
            {
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <div class="el-card-item">
                        <div class="el-card-avatar el-overlay-1">
                            <img src="@Model.RutaImagen1" />
                            <div class="el-overlay">
                                <ul class="list-style-none el-info">
                                    <li class="el-item"><a onclick="helperFunctions.mostrarBase64('@Model.RutaImagen1')" class="btn default btn-outline image-popup-vertical-fit el-link" href="#"><i class="icon-magnifier"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.RutaImagen2 != "")
            {
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <div class="el-card-item">
                        <div class="el-card-avatar el-overlay-1">
                            <img src="@Model.RutaImagen2" />
                            <div class="el-overlay">
                                <ul class="list-style-none el-info">
                                    <li class="el-item"><a onclick="helperFunctions.mostrarBase64('@Model.RutaImagen2')" class="btn default btn-outline image-popup-vertical-fit el-link" href="#"><i class="icon-magnifier"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (Model.RutaImagen3 != "")
            {
            <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                <div class="white-box">
                    <div class="el-card-item">
                        <div class="el-card-avatar el-overlay-1">
                            <img src="@Model.RutaImagen3" />
                            <div class="el-overlay">
                                <ul class="list-style-none el-info">
                                    <li class="el-item"><a onclick="helperFunctions.mostrarBase64('@Model.RutaImagen3')" class="btn default btn-outline image-popup-vertical-fit el-link" href="#"><i class="icon-magnifier"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

    <div class="modal-footer" style="display: block;">
        <div class="bootstrap-dialog-footer">
            <div class="bootstrap-dialog-footer-buttons">
                <button class="btn btn-outline btn-default waves-effect waves-light" type="button" id="btn_aprobar"><span class="bootstrap-dialog-button-icon icon-check"></span>&nbsp;&nbsp;Aprobar</button>
                <button class="btn btn-outline btn-default waves-effect waves-light" type="button" id="btn_rechazar"><span class="bootstrap-dialog-button-icon icon-ban"></span>&nbsp;&nbsp;Rechazar</button>
            </div>
        </div>
    </div>

    <br />
</form>

<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        pago.aprobacion.load();
    });
</script>